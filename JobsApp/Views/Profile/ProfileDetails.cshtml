@model JobsApp.Models.ProfileModel

@{
    ViewData["Title"] = "ProfileDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AnnouncementDetails</h1>

<div>
    <h4>ProfileModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idprofile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idprofile)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.Name == Model.Idprofile)
    {
        @Html.ActionLink("Edit", "Edit", new {  id = Model.Idprofile  })
        if (User.IsInRole("Candidate")) {
            @Html.ActionLink("My CVs", "Index", "Cv", new {  id = Model.Idprofile  })
        }
        if (User.IsInRole("Company"))
        {
            @Html.ActionLink("My Announcements", "MyAnnouncements", "Announcement", new {  idProfile = User.Identity.Name  })
        } 
    }
    else if (Model.Idprofile == null)
    {
        @Html.ActionLink("Create Profile", "Create");
    }
</div>
