@model IEnumerable<JobsApp.Models.ApplicationModel>

@{
    ViewData["Title"] = "MyApplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Applications</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <div>
                    @Html.ActionLink("Announcement", "Details", "Announcement", new {  id=item.Idannouncement  })
                </div>
                <div>
                    @Html.ActionLink("CV", "Details", "Cv", new {  id=item.Idcv  })
                </div>
                <div>
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Idapplication  })
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
