            <th>
                @Html.DisplayNameFor(model => model.Idannouncement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idprofile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
